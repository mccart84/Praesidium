@model IEnumerable<Praesidium.Data_Models.Admin.ShSySection>

@{
    ViewBag.Title = "Sections";
}

<h2>Sections</h2>

<p>
    @Html.ActionLink("Create New", "SectionsCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "SectionsEdit", new { id=item.RecId }) |
            @Html.ActionLink("Details", "SectionsDetails", new { id=item.RecId }) |
            @Html.ActionLink("Delete", "SectionsDelete", new { id=item.RecId })
        </td>
    </tr>
}

</table>
