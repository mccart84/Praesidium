@model IEnumerable<Praesidium.Data_Models.Admin.ShUserType>

@{
    ViewBag.Title = "UserTypes";
}

<h2>UserTypes</h2>

<p>
    @Html.ActionLink("Create New", "UserTypesCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>
        <td>
            @Html.ActionLink("Edit", "UserTypesEdit", new { id=item.RecId }) |
            @Html.ActionLink("Details", "UserTypesDetails", new { id=item.RecId }) |
