@model PagedList.IPagedList<Praesidium.Data_Models.Admin.ShUserType>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


<div class="panel panel-heading">
    <h2>Admin User Types</h2>
</div>

<div class="panel">
    <div style="">
        <br />
        <h4 class="col-md-11"><b>List of Navigation Items</b></h4>
        <p style="float: right;" class="col-md-1">
            @Html.ActionLink("Create New", "UserTypesCreate", null, new { @class = "btn btn-info" })
        </p>
        <br />
    </div>
    <table class="table">
        <tr>
            <th>
                Type
            </th>
            <th>
                Deleted
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    @Html.ActionLink(" ", "UserTypesEdit", new { id = item.RecId }, new { @class = "btn btn-info glyphicon glyphicon-edit", @title = "Edit User Type" })
                    @Html.ActionLink(" ", "UserTypesDetails", new { id = item.RecId }, new { @class = "btn btn-info glyphicon glyphicon-eye-open", @title = "View Details" })
                    @Html.ActionLink(" ", "UserTypesDelete", new { id = item.RecId }, new { @class = "btn btn-danger glyphicon glyphicon-trash", @title = "Delete User Type" })
                </td>
            </tr>
        }

    </table>
    </div>
