<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/lodash.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>
    <div style="background-color: black; height: 100px;"></div>
    <div class="col-md-2" style="background-color: black; height: calc(100vh - 150px)">
        <div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
                </div>
            <div class="navbar-collapse collapse">
                @Html.ActionLink("Main Site", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "float: none !important;" })
                <br />
                <ul class="nav navbar-nav" style="float:left !important;">
                    @{
                    Html.RenderAction("NavigationItems", "Home", new {IsAdmin = true});
                    }                    
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-10" style="">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
