
@{
    ViewBag.Title = "Teen";
}

<div class="container-fluid" id="photo_cont" style="margin-bottom:3%;">
    <div class="row">
        <div class="col-md-12">

            <figure class="effect-caged">

                <img src="~/Content/Images/teen.png" style="width:100%;max-height:330px;" />
                <figcaption>
                    <h1> <span>Teen</span></h1>
                </figcaption>
            </figure>

        </div>

    </div>
</div>
<!-- Carousel -->

<div class="row">

    <div class="col-xs-12">

        <div class="row">
            <div class="col-md-12">
                <h1 id="headers">Teens</h1>
                <p class="lead" id="p_text">
                    Teens are some of the most targeted victims when it comes to trafficking. This page focuses on teaching teens what human trafficking is,
                    the importance of prevention, and ways to protect themselves.
                </p>
            </div>
        </div>
    </div>
</div>
@if (Model != null)
{
    foreach (var file in Model)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="well">
                    <h2 style="color:slategrey;text-align:center;"><strong>@file.Title</strong></h2>
                    <p id="p_text">
                        @WebUtility.HtmlDecode(file.Description)
                    </p>
                    <button class="btn btn-md btn-success align-center" style="margin-left:42%;">View File</button>
                </div>
            </div>
        </div>
    }
}
