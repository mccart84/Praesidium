
@{
    ViewBag.Title = "Adults";
}

<div class="container-fluid" id="photo_cont" style="margin-bottom:3%;">
    <div class="row">
        <div class="col-md-12">

            <figure class="effect-caged">


                <img src="~/Content/Images/adults.png" style="width:100%;max-height:330px;" />
                <figcaption>
                    <h1> <span>Adults</span></h1>
                </figcaption>
            </figure>

        </div>

    </div>
</div>
<!-- Carousel -->

<div class="row">

    <div class="col-xs-12">

        <div class="row">
            <div class="col-md-12">
                <h1 id="headers">Adults</h1>
                <p class="lead" id="p_text">
                    This page is targeted towards adults to teach them about the dangers of human trafficking and the signs to help recognize when trafficking may be taking place.
                    It is meant to help inform them so that they can take appropriate actions to keep their children, and others, safe.
                </p>
            </div>
        </div>

    </div>
</div>

	@if (Model != null)
	{
		foreach (var file in Model)
		{
			<div class="row">
				<div class="col-md-12">
					<div class="well">
						<h2 style="color:slategrey;text-align:center;"><strong>@file.Title</strong></h2>
						<p id="p_text">
							@HttpUtility.HtmlDecode(file.Description)
						</p>
						<button class="btn btn-md btn-success align-center" style="margin-left:42%;">View File</button>
					</div>
				</div>
			</div>
		}
	}
