@model IEnumerable<Praesidium.Data_Models.Admin.FileView>
@{
    ViewBag.Title = "Adults";
}
<div class="container-fluid" id="photo_cont" style="margin-bottom:3%;min-height:300px;margin-top:-23px;">
    <div class="row">
        <div class="col-md-12">
            <figure class="effect-caged">
                <img src="~/Content/Images/Cyber Final.png" style="width:100%;max-height:330px;" />              
            </figure>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <h1 id="headers">Cyber Security for Adults</h1>
        <p id="p_text">
            This page is a resource for all adults, whether you are a parent, a grandparent, a police officer or even a official.
            This page will provide you with articles about the importance of providing a safe online experience for children and
            how you can go about that from your various roles.
        </p>      
    </div>

    <div class="col-md-4 align-center " id="borders" style="min-height:150px;">
        <h3 id="headers_borders">Adult Page Links</h3>
        <ul class="align-left" id="p_textborders">
            <li><A HREF="http://www.cox.com/wcm/en/aboutus/datasheet/takecharge/2009-teen-survey.pdf">COX Communications Report</A></li>
            <li><A HREF="http://www.innocentsatrisk.org">Innocents at Risk</A></li>
            <li><A HREF="https://humantraffickinghotline.org">Human Trafficking Hotline</A></li>

        </ul>
    </div>
</div>
@if (Model != null)
{
    foreach (var file in Model)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="well">
                    <h2 style="color:slategrey;text-align:center;"><strong>@file.Title</strong></h2>
                    <p id="p_text">
                        @WebUtility.HtmlDecode(file.Description)
                    </p>
                    <button class="btn btn-md btn-success align-center" style="margin-left:42%;">View File</button>
                </div>
            </div>
        </div>
    }
}



